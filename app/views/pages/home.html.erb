<div class="row justify-content-center mt-4">
  <div class="col-md-8">
    <% if @query.present? %>
      <h2>Search Results for "<%= @query %>":</h2>
      <% if @items.any? %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <%= render partial: 'shared/item_card', collection: @items, as: :item %>
        </div>
      <% else %>
        <p>No items found.</p>
      <% end %>
    <% else %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <%= render partial: 'shared/item_card', collection: @items, as: :item %>
      </div>
    <% end %>
  </div>
</div>
